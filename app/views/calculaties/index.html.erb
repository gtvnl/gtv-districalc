<%= content_for :page_title do %>
  <h1 class="text-center">Calculaties</h1>
  <hr />
<% end %>


<% if @calculaties.blank? %>
  <div class="callout alert text-center">
    <h5>Geen gegevens gevonden!</h5>
    <p>
      Voeg eerst wat gegevens toe.
    </p>
  </div>
  <hr />
<% else %>

<table class="hover">
  <thead>
    <tr>
      <th width="100px" class="text-right">Nummer</th>
      <th width="400px">Project naam</th>
      <th width="50px" class="text-center">Posities</th>
      <th>Fabrikaat</th>
      <th>Systeem</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @calculaties.each do |calculatie| %>
      <tr>
        <td class="text-right"><%= link_to calculatie.number, edit_calculatie_path(calculatie) %></td>
        <td><%= calculatie.name %></td>
        <td class="text-center">0</td>
        <td><%= calculatie.fabrikaat.name %></td>
        <td><%= calculatie.systeem.name %></td>

        <td>
          <!-- DELETE -->
          <%= link_to calculatie, method: :delete, data: { confirm: 'Weet je het zeker?' } do %>
            <i class="fi-x"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
<hr />
<%= link_to new_calculatie_path, class: 'button', id: 'new' do %>
  <i class="fi-plus"></i> Calculatie toevoegen
<% end %>
