<%= simple_form_for([@positie_item.positie, @positie_item]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quantity, as: :integer, label: "Aantal" %>

  </div>

  <div class="expanded large button-group">
    <%= f.button :submit, "Aantal wijzigen", class: "hollow" %>
  </div>

<% end %>
